<div class="box box-attribute">

    {{#ifvalue parent.kind value="class"}}
        <h2><a name="{{{hash}}}">Attribute: {{parent.name}}.{{name}}</a></h2>
    {{else}}
        <h2><a name="{{{hash}}}">Attribute: {{name}}</a></h2>
    {{/ifvalue}}

    {{#if deprecated}}
        <span class="tag">deprecated</span>
    {{/if}}

    {{#if text}}
        <p class="text">{{{text}}}</p>
    {{/if}}

    {{#if type}}
        <pre>{{type}}</pre>
    {{/if}}

    <label>{{name}}</label>

    {{#if description}}
        <span class="description">{{{description}}}</span>
    {{/if}}

</div>
